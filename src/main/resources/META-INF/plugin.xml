<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.prudhvir3ddy.jbinpb</id>
    <name>Indian Progress Bar</name>
    <vendor>prudhvir3ddy</vendor>

    <description>
    Indian Progress Bar is a fun IntelliJ IDEA plugin that replaces the standard progress bar with a vibrant, animated Indian flag-themed progress bar. It adds a touch of cultural flair to your development environment, making waiting times more enjoyable and visually appealing. Perfect for developers who want to showcase their Indian pride while coding!
    </description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.IndianBundle</resource-bundle>

    <actions>
        <action class="com.github.prudhvir3ddy.jbinpb.RamaTimeAction" id="RamaTime" internal="true" >
            <add-to-group group-id="Internal.UI" anchor="before" relative-to-action="ShowProgressTestDialogAction" />
        </action>
    </actions>

    <applicationListeners>
        <listener class="com.github.prudhvir3ddy.jbinpb.IndianDynamicPluginListener"
                  topic="com.intellij.ide.plugins.DynamicPluginListener"/>
        <listener class="com.github.prudhvir3ddy.jbinpb.IndianAppLifecycleListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

</idea-plugin>
